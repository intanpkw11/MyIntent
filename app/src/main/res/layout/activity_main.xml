<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFF0F0"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FFC66363"
        android:text="ACTIVITY 1"
        android:textSize="24sp"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Masukkan Nama"
        android:inputType="text"
        android:textSize="18sp"
        android:autofillHints="#FFFFF0F0" />

    <EditText
        android:id="@+id/ed_institusi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Masukkan Institusi"
        android:inputType="text"
        android:textSize="18sp"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/btn_pindah_tanpa_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="PINDAH ACTIVITY 2 TANPA DATA"
        app:backgroundTint="#DA9595" />

    <Button
        android:id="@+id/btn_pindah_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PINDAH ACTIVITY 2 DATA"
        app:backgroundTint="#DA9595" />

</LinearLayout>